<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Try to auto-detect Vintage Story installation path -->
    <VintageStoryPath Condition="'$(VINTAGE_STORY)' != ''">$(VINTAGE_STORY)</VintageStoryPath>
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('C:\Users\$(USERNAME)\AppData\Roaming\Vintagestory')">C:\Users\$(USERNAME)\AppData\Roaming\Vintagestory</VintageStoryPath>
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('C:\Program Files (x86)\Vintagestory')">C:\Program Files (x86)\Vintagestory</VintageStoryPath>
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('C:\Program Files\Vintagestory')">C:\Program Files\Vintagestory</VintageStoryPath>
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('$(USERPROFILE)\AppData\Roaming\Vintagestory')">$(USERPROFILE)\AppData\Roaming\Vintagestory</VintageStoryPath>
    
    <!-- Fallback: common Steam installation paths -->
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('C:\Program Files (x86)\Steam\steamapps\common\VintageStory')">C:\Program Files (x86)\Steam\steamapps\common\VintageStory</VintageStoryPath>
    <VintageStoryPath Condition="'$(VintageStoryPath)' == '' AND Exists('C:\Program Files\Steam\steamapps\common\VintageStory')">C:\Program Files\Steam\steamapps\common\VintageStory</VintageStoryPath>
    
    <!-- Additional paths for server-downloaded mods (in mod cache) -->
    <VintageStoryDataPath Condition="'$(VintageStoryDataPath)' == ''">C:\Users\$(USERNAME)\AppData\Roaming\VintagestoryData</VintageStoryDataPath>
    <VintageStoryDataPath Condition="'$(VintageStoryDataPath)' == '' AND Exists('$(USERPROFILE)\AppData\Roaming\VintagestoryData')">$(USERPROFILE)\AppData\Roaming\VintagestoryData</VintageStoryDataPath>
    
    <!-- Show warning if path not found -->
    <VintageStoryFound Condition="'$(VintageStoryPath)' != '' AND Exists('$(VintageStoryPath)\VintagestoryAPI.dll')">true</VintageStoryFound>
    <VintageStoryFound Condition="'$(VintageStoryFound)' != 'true'">false</VintageStoryFound>
  </PropertyGroup>

  <Target Name="CheckVintageStoryPath" BeforeTargets="BeforeBuild">
    <Message Text="VintageStoryPath: $(VintageStoryPath)" Importance="high" />
    <Message Text="VintageStoryDataPath: $(VintageStoryDataPath)" Importance="high" />
    <Message Text="VintagestoryAPI.dll exists: $(VintageStoryPath)\VintagestoryAPI.dll" Condition="Exists('$(VintageStoryPath)\VintagestoryAPI.dll')" Importance="high" />
    
    <!-- Check main installation ImGui -->
    <Message Text="ImGui in main install: $(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll" Condition="Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll')" Importance="high" />
    <Message Text="VSImGui in main install: $(VintageStoryPath)\Mods\VSImGui\VSImGui.dll" Condition="Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll')" Importance="high" />
    
    <!-- Check server-downloaded mods (ModsByServer) -->
    <ItemGroup>
      <ServerImGuiFiles Include="$(VintageStoryDataPath)\ModsByServer\**\vsimgui.zip" />
      <ServerImGuiDlls Include="$(VintageStoryDataPath)\ModsByServer\**\ImGui.NET.dll" />
      <ServerVSImGuiDlls Include="$(VintageStoryDataPath)\ModsByServer\**\VSImGui.dll" />
    </ItemGroup>
    <Message Text="Found vsimgui.zip in server folders: @(ServerImGuiFiles)" Condition="'@(ServerImGuiFiles)' != ''" Importance="high" />
    <Message Text="Found loose ImGui.NET.dll in server folders: @(ServerImGuiDlls)" Condition="'@(ServerImGuiDlls)' != ''" Importance="high" />
    <Message Text="Found loose VSImGui.dll in server folders: @(ServerVSImGuiDlls)" Condition="'@(ServerVSImGuiDlls)' != ''" Importance="high" />
    
    <!-- Check extracted build folder -->
    <Message Text="ImGui extracted to build folder: $(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll" Condition="Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll')" Importance="high" />
    <Message Text="VSImGui extracted to build folder: $(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll" Condition="Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll')" Importance="high" />
    
    <!-- Check legacy mod cache paths for compatibility -->
    <Message Text="ImGui in legacy mod cache: $(VintageStoryDataPath)\ModCache\vsimgui\ImGui.NET.dll" Condition="Exists('$(VintageStoryDataPath)\ModCache\vsimgui\ImGui.NET.dll')" Importance="high" />
    <Message Text="VSImGui in legacy mod cache: $(VintageStoryDataPath)\ModCache\vsimgui\VSImGui.dll" Condition="Exists('$(VintageStoryDataPath)\ModCache\vsimgui\VSImGui.dll')" Importance="high" />
    
    <Message Text="protobuf-net.dll exists: $(VintageStoryPath)\protobuf-net.dll" Condition="Exists('$(VintageStoryPath)\protobuf-net.dll')" Importance="high" />
    
    <Warning Text="Vintage Story installation not found. Please set VINTAGE_STORY environment variable or install Vintage Story." Condition="'$(VintageStoryFound)' == 'false'" />
    
    <!-- Only error if ImGui isn't found in ANY of the locations (including extracted) -->
    <Error Text="VSImGui mod is required but not found in any location. Please install VSImGui from: https://mods.vintagestory.at/vsimgui or join a server that has it installed." 
           Condition="'$(VintageStoryFound)' == 'true' AND !Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll') AND !Exists('$(VintageStoryPath)\VSImGui.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll') AND '@(ServerVSImGuiDlls)' == '' AND !Exists('$(VintageStoryDataPath)\ModCache\vsimgui\VSImGui.dll') AND '@(ServerImGuiFiles)' == ''" />
           
    <Error Text="ImGui.NET.dll is required but not found in any location. Please ensure VSImGui mod is properly installed from: https://mods.vintagestory.at/vsimgui or available from a server." 
           Condition="'$(VintageStoryFound)' == 'true' AND !Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll') AND !Exists('$(VintageStoryPath)\ImGui.NET.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll') AND '@(ServerImGuiDlls)' == '' AND !Exists('$(VintageStoryDataPath)\ModCache\vsimgui\ImGui.NET.dll') AND '@(ServerImGuiFiles)' == ''" />
  </Target>

  <ItemGroup Condition="'$(VintageStoryFound)' == 'true'">
    <Reference Include="VintagestoryAPI">
      <HintPath>$(VintageStoryPath)\VintagestoryAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSEssentials" Condition="Exists('$(VintageStoryPath)\Mods\VSEssentials.dll')">
      <HintPath>$(VintageStoryPath)\Mods\VSEssentials.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSCreativeMod" Condition="Exists('$(VintageStoryPath)\Mods\VSCreativeMod.dll')">
      <HintPath>$(VintageStoryPath)\Mods\VSCreativeMod.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="protobuf-net" Condition="Exists('$(VintageStoryPath)\protobuf-net.dll')">
      <HintPath>$(VintageStoryPath)\protobuf-net.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ImGui.NET" Condition="Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll')">
      <HintPath>$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSImGui" Condition="Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll')">
      <HintPath>$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Alternative reference paths for different Vintage Story installations -->
  <ItemGroup Condition="'$(VintageStoryFound)' != 'true' AND '$(VintageStoryPath)' != ''">
    <Reference Include="VintagestoryAPI" Condition="Exists('$(VintageStoryPath)\VintagestoryAPI.dll')">
      <HintPath>$(VintageStoryPath)\VintagestoryAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="protobuf-net" Condition="Exists('$(VintageStoryPath)\protobuf-net.dll')">
      <HintPath>$(VintageStoryPath)\protobuf-net.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <!-- Try alternate paths for mods -->
    <Reference Include="VSEssentials" Condition="Exists('$(VintageStoryPath)\VSEssentials.dll')">
      <HintPath>$(VintageStoryPath)\VSEssentials.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ImGui.NET" Condition="Exists('$(VintageStoryPath)\ImGui.NET.dll')">
      <HintPath>$(VintageStoryPath)\ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSImGui" Condition="Exists('$(VintageStoryPath)\VSImGui.dll')">
      <HintPath>$(VintageStoryPath)\VSImGui.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Extract and reference ImGui from server-downloaded zips if needed -->
  <Target Name="ExtractServerImGui" BeforeTargets="BeforeBuild" Condition="'$(VintageStoryDataPath)' != '' AND !Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll')">
    <!-- Find vsimgui.zip in any server folder -->
    <ItemGroup>
      <VSImGuiZipFiles Include="$(VintageStoryDataPath)\ModsByServer\**\vsimgui.zip" />
    </ItemGroup>
    
    <!-- Extract the first found zip to a temp build location -->
    <PropertyGroup>
      <VSImGuiZipFile>@(VSImGuiZipFiles -> '%(Identity)', '')</VSImGuiZipFile>
      <VSImGuiBuildExtractPath>$(MSBuildProjectDirectory)\obj\VSImGuiExtracted</VSImGuiBuildExtractPath>
    </PropertyGroup>
    
    <!-- Only extract if we found a zip and haven't extracted yet -->
    <MakeDir Directories="$(VSImGuiBuildExtractPath)" Condition="'$(VSImGuiZipFile)' != '' AND !Exists('$(VSImGuiBuildExtractPath)\VSImGui.dll')" />
    <Unzip SourceFiles="$(VSImGuiZipFile)" DestinationFolder="$(VSImGuiBuildExtractPath)" Condition="'$(VSImGuiZipFile)' != '' AND !Exists('$(VSImGuiBuildExtractPath)\VSImGui.dll')" />
    
    <Message Text="Extracted VSImGui from server zip: $(VSImGuiZipFile)" Condition="'$(VSImGuiZipFile)' != '' AND Exists('$(VSImGuiBuildExtractPath)\VSImGui.dll')" Importance="high" />
  </Target>

  <!-- Look for ImGui in extracted server mods or other locations -->
  <ItemGroup Condition="'$(VintageStoryDataPath)' != ''">
    <!-- First try extracted server ImGui -->
    <Reference Include="ImGui.NET" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll') AND Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll')">
      <HintPath>$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSImGui" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll') AND Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll')">
      <HintPath>$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- Try to find already extracted DLLs in server folders (if they exist loose) -->
    <ImGuiServerDlls Include="$(VintageStoryDataPath)\ModsByServer\**\ImGui.NET.dll" />
    <VSImGuiServerDlls Include="$(VintageStoryDataPath)\ModsByServer\**\VSImGui.dll" />
    
    <Reference Include="ImGui.NET" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll') AND '@(ImGuiServerDlls)' != ''">
      <HintPath>@(ImGuiServerDlls -> '%(Identity)', '')</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSImGui" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll') AND '@(VSImGuiServerDlls)' != ''">
      <HintPath>@(VSImGuiServerDlls -> '%(Identity)', '')</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- Fallback: check old paths for compatibility -->
    <Reference Include="ImGui.NET" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\ImGui.NET.dll') AND '@(ImGuiServerDlls)' == '' AND Exists('$(VintageStoryDataPath)\ModCache\vsimgui\ImGui.NET.dll')">
      <HintPath>$(VintageStoryDataPath)\ModCache\vsimgui\ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VSImGui" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\VSImGui.dll') AND !Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted\VSImGui.dll') AND '@(VSImGuiServerDlls)' == '' AND Exists('$(VintageStoryDataPath)\ModCache\vsimgui\VSImGui.dll')">
      <HintPath>$(VintageStoryDataPath)\ModCache\vsimgui\VSImGui.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Include="modinfo.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Add NuGet packages as fallback if local references don't work -->
  <ItemGroup>
    <PackageReference Include="protobuf-net" Version="3.2.30" Condition="!Exists('$(VintageStoryPath)\protobuf-net.dll')" />
    <PackageReference Include="ImGui.NET" Version="1.89.7.1" Condition="!Exists('$(VintageStoryPath)\Mods\VSImGui\ImGui.NET.dll')" />
  </ItemGroup>

  <!-- ImGui is required for this mod to function -->

  <!-- Clean up extracted ImGui files after build -->
  <Target Name="CleanExtractedImGui" AfterTargets="AfterBuild">
    <RemoveDir Directories="$(MSBuildProjectDirectory)\obj\VSImGuiExtracted" Condition="Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted')" />
    <Message Text="Cleaned up extracted VSImGui files" Condition="Exists('$(MSBuildProjectDirectory)\obj\VSImGuiExtracted')" Importance="normal" />
  </Target>

  <Target Name="Package" AfterTargets="PostBuildEvent" Condition=" '$(Configuration)' == 'Release' ">
    <ZipDirectory SourceDirectory="$(TargetDir)" DestinationFile="$(TargetDir)../WaypointShare.zip" Overwrite="true" />
  </Target>
</Project>
